# Gmail IMAP Configuration
GMAIL_EMAIL=your-email@gmail.com
GMAIL_PASSWORD=your-app-specific-password
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TIMEOUT=30

# Email Processing Settings
INBOX_FOLDER=INBOX
MARK_AS_READ=true
BATCH_SIZE=50
MAX_ATTACHMENT_SIZE_MB=25

# Attachment Storage
ATTACHMENT_STORAGE_PATH=./attachments

# AUBS Integration
AUBS_API_URL=https://your-aubs-endpoint.com/api
AUBS_API_KEY=your-aubs-api-key
AUBS_TIMEOUT=60

# Service Settings
POLL_INTERVAL_SECONDS=60
LOG_LEVEL=INFO
ENABLE_SSL=true

# Performance Settings
MAX_WORKERS=5
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
