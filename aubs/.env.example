# AUBS Configuration Example
# Copy to .env and configure for your environment

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# External Service URLs
DOLPHIN_URL=http://dolphin-server:12345
UI_TARS_URL=http://uitars:8080
NATS_URL=nats://nats:4222
SUPABASE_URL=http://supabase:8000
SUPABASE_KEY=your-supabase-key-here

# Orchestration Settings
CONFIDENCE_THRESHOLD=0.9
MAX_RETRIES=3
EXECUTION_TIMEOUT=300

# Triage Agent Configuration
TRIAGE_AGENT_PROVIDER=ollama
TRIAGE_AGENT_MODEL=llama3.2:8b-instruct
TRIAGE_AGENT_TIMEOUT=15
TRIAGE_AGENT_GPU=false
TRIAGE_AGENT_FALLBACK=DISABLED

# Vision Agent Configuration
VISION_AGENT_PROVIDER=openai
VISION_AGENT_MODEL=gpt-4o
VISION_AGENT_TIMEOUT=30
VISION_AGENT_GPU=false
VISION_AGENT_FALLBACK=ollama:llama3.2-vision:11b

# Deadline Agent Configuration
DEADLINE_AGENT_PROVIDER=ollama
DEADLINE_AGENT_MODEL=llama3.2:8b-instruct
DEADLINE_AGENT_TIMEOUT=15
DEADLINE_AGENT_GPU=false
DEADLINE_AGENT_FALLBACK=DISABLED

# Task Agent Configuration
TASK_AGENT_PROVIDER=ollama
TASK_AGENT_MODEL=llama3.2:8b-instruct
TASK_AGENT_TIMEOUT=15
TASK_AGENT_GPU=false
TASK_AGENT_FALLBACK=DISABLED

# Context Agent Configuration (CRITICAL - NO FALLBACK)
CONTEXT_AGENT_PROVIDER=anthropic
CONTEXT_AGENT_MODEL=claude-sonnet-4
CONTEXT_AGENT_TIMEOUT=30
CONTEXT_AGENT_GPU=false
CONTEXT_AGENT_FALLBACK=DISABLED

# LLM Provider API Keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OLLAMA_HOST=http://localhost:11434

# MCP Tool Settings
MCP_TODOIST_ENABLED=true
MCP_GCAL_ENABLED=true
MCP_TWILIO_ENABLED=true

# High-Risk Detection
HIGH_RISK_KEYWORDS=fire,lawsuit,inspection,deadline,urgent,overdue,emergency,critical
