# ChiliHead OpsManager v2.1 - Environment Configuration

# Database Passwords
POSTGRES_PASSWORD=changeme_secure_password
REDIS_PASSWORD=changeme_secure_password

# Grafana (if using monitoring profile)
GRAFANA_PASSWORD=admin

# Ollama Configuration
OLLAMA_MODELS=llama-3.2-8b-instruct,oss-120b

# AUBS Configuration
AUBS_LOG_LEVEL=INFO
AUBS_WORKERS=4

# Agent Configuration
TRIAGE_AGENT_MODEL=llama-3.2-8b-instruct
VISION_AGENT_GPU=true
CONTEXT_AGENT_MODEL=oss-120b
CONTEXT_AGENT_FALLBACK=false

# Email Configuration (IMAP)
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USER=your-email@gmail.com
EMAIL_IMAP_PASSWORD=your-app-password

# MCP Tools Configuration
TASK_MANAGER_API_URL=http://your-task-manager/api
CALENDAR_API_URL=http://your-calendar/api
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-sid
TWILIO_AUTH_TOKEN=your-token
TWILIO_FROM_NUMBER=+1234567890

# Security
JWT_SECRET=changeme_very_long_random_string
API_KEY=changeme_api_key

# Optional: External Services
SENTRY_DSN=
OPENAI_API_KEY=
